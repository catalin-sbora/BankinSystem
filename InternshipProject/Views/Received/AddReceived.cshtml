@model InternshipProject.ViewModels.Received.AddReceivedViewModel

@{
    ViewData["Title"] = "AddReceived";
}
<h1>AddReceived</h1>


<br />
@using (Html.BeginForm("Create", "Received"))
{
    <div style="width: 270px; padding-left: 25px;">
        <div class="form-group">
            <strong>
                @Html.Label("External IBAN")
            </strong>
            @Html.TextBoxFor(payment => payment.ExternalIBAN, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <strong>
                @Html.Label("External Name")
            </strong>
            @Html.TextBoxFor(payment => payment.ExternalName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <strong>
                @Html.Label("Amount")
            </strong>
            @Html.TextBoxFor(payment => payment.Amount, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <strong>
                @Html.Label("Select Account")
            </strong>
            @Html.DropDownListFor(payment => payment.BankAccountId, new SelectList(Model.BankAccount, "Id", "IBAN"), "", new { @class = "form-control" })
        </div>

        <button class="btn btn-success" type="submit">Create</button>
    </div>
}

