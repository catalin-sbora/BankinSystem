@using InternshipProject.ViewModels.Cards
@model InternshipProject.ViewModels.Cards.TransactionViewModel
@if (Model.PaymentStatus == NewPaymentStatus.NotInitiated)
{

    


    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Amount"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExternalName"></label>
        <input asp-for="ExternalName" type="text" class="form-control" />
        <span asp-validation-for="ExternalName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IBan"></label>
        <input asp-for="IBan" type="text" class="form-control" />
        <span asp-validation-for="IBan" class="text-danger"></span>
    </div>
    <input type="hidden" name="CardId" value="@Model.CardId" />



}
else if (Model.PaymentStatus == NewPaymentStatus.Created)
{
    <div class="d-flex flex-column justify-content-center align-items-center text-center">
        <img src="~/images/succeeded.png" width="256" height="256" />
        <h2 class="text-success">@Model.PaymentMessage</h2>
        <script>
            onPaymentOperationSuccess();
        </script>
    </div>
}
else
{
    <div class="d-flex flex-column justify-content-center align-items-center text-center">
        <img src="~/images/failed.png" width="256" height="256" />

        <h2 class="text-danger">@Model.PaymentMessage</h2>
        <script>
            onPaymentOperationFailure();
        </script>
    </div>
}