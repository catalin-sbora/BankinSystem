@model InternshipProject.ViewModels.Cards.CardTransactionsListViewModel
@{
    ViewData["Title"] = "CardPayments";
}
  
@using (Html.BeginForm("NewCardTransaction", "Cards"))
{
    <button class="btn btn-success float-right" type="submit">
        New Payment
    </button>
    
}


</br>
</br>
</br>

<div class="container">
    <div class="input-group float-right" style="width:200px">
        <input type="text" class="form-control "   placeholder="Search"  >
        <div class="input-group-append">
            <div class="btn btn-success float-right" type="button "  >
                <i class="fa fa-search"></i>
            </div>
        </div>
    </div>
    <h2>Transactions</h2>
    <table class="table table-striped table-hover align-content-center ">
        <thead class="bg-success text-white">
            <tr>
                <th scope="col">Amount</th>
                <th scope="col">Date</th>

                <th scope="col">Name</th>
                <th scope="col">Transaction Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.CardTransactions)
            {
                <tr>

                    <td>@transaction.Amount</td>
                    <td>@transaction.DateTime</td>

                    <td>@transaction.Name</td>
                    <td>@transaction.TransactionType</td>
                </tr>
            }

        </tbody>
    </table>
</div>

@using (Html.BeginForm("Search", "Cards", new { cardTransactionsListViewModel = Model.CardTransactions })) ;