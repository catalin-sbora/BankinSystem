@model InternshipProject.ViewModels.Cards.CompleteCardsViewModel
@{
    ViewData["Title"] = "Index";
}

<p class="text-right font-weight-bold">Name: John Doe</p>
<p class="text-right font-weight-bold">Contact: 0773820330</p>
    </br>
    </br>
    </br>
<div class="container ">
    <div class="card-deck">
        @foreach (var card in Model.Cards)
        {
            <div class="card text-black border-success mb-3" style="width: 16rem; height: 280px">

                <div class="card-body bg-light">
                    <div class="  square " style="background-color:#@card.CardColor.Color.ToString("X6"); width:50px;height:50px;margin:auto;margin-bottom:20px"></div>
                   
                    <h5 class="card-title">Name:@card.Card.OwnerName</h5>
                    <p class="card-text">Serial Number:@card.Card.SerialNumber</p>
                    <p class="card-text">Expiry Date:@card.Card.ExpiryDate.ToShortDateString()</p>
                    <input type="button" class="btn-success" value="See Transactions" onclick="location.href='@Url.Action("CardPayments", "Cards", new { Id = card.Card.Id })'" />
                </div>
            </div>
        }
    </div>
</div>

