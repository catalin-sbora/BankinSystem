@model InternshipProject.ViewModels.Accounts.TransactionsReportViewModel
@{
    Layout = null;
    ViewData["Title"] = "TransactionsReport";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 14px;
            width: 100%;
        }

        .header-band {
            background-color: #DDDDDD;
            font-size: 18px;
            font-weight: bold;
            width: 90%;
            height: 50px;
            line-height: 50px;
            margin: auto;
            margin-top: 50px;
            padding: 10px;
        }

        .customer-details {
            background-color: white;
            color: black;
            text-align: left;
            width: 90%;
            margin:auto;
        }

        .table-header {
            background-color: #DDDDDD;
            color: black;
            height: 50px;
        }

        .table {
            width: 90%;
            margin: auto;
        }

        .tbody tr:nth-child(odd) {
            background-color: #EFEFEF;
        }

        .tbody tr {
            height: 30px;
        }
    </style>
</head>
<body>
    <div class="header-band">Online Banking</div>
    <br>
    <br>
    <br>
    <div class="customer-details">
        <b>Name:</b> @Model.CustomerName <br>
        <b>Account: </b> @Model.Account<br>
        <b>Balance: </b> @Model.Balance.ToString("N") @Model.Currency
    </div>

    <br />
    <table class="table">
        <thead>
            <tr class="table-header">
                <th>Amount</th>
                <th>Date</th>
                <th>Balance</th>
                <th>Details</th>
                <th>Name</th>
                <th>External Account</th>
            </tr>
        </thead>
        <tbody class="tbody">
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Amount.ToString("N")</td>
                    <td>@transaction.Time.ToShortDateString()</td>
                    <td>10.30</td>
                    <td>@transaction.Details</td>
                    <td>@transaction.ExternalName</td>
                    <td>@transaction.ExternalIBAN</td>
                </tr>

            }
        </tbody>
    </table>

</body>
</html>