@using InternshipProject.ViewModels.Accounts;
@model NewPaymentViewModel

@if (Model.PaymentStatus == NewPaymentStatus.NotInitiated)
{

    <input type="hidden" asp-for="SourceAccount" />
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Amount"></span>
    </div>

    <div class="form-group">
        <label asp-for="DestinationName"></label>
        <input asp-for="DestinationName" type="text" class="form-control" />
        <span asp-validation-for="DestinationName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DestinationIBAN"></label>
        <input asp-for="DestinationIBAN" type="text" class="form-control" />
        <span asp-validation-for="DestinationIBAN" class="text-danger" ></span>
    </div>

    <div class="form-group">
        <label asp-for="Details"></label>
        <input asp-for="Details" type="text" class="form-control" />
    </div>
}
else if (Model.PaymentStatus == NewPaymentStatus.Created)
{
<div class="d-flex flex-column justify-content-center align-items-center text-center">
    <img src="~/images/succeeded.png" width="256" height="256" />
    <h2 class="text-success">@Model.PaymentMessage</h2>
    <script>
        onPaymentOperationSuccess();
    </script>
</div>
}
else
{
<div class="d-flex flex-column justify-content-center align-items-center text-center" >
    <img src="~/images/failed.png" width="256" height="256" />
    <h2 class="text-danger">@Model.PaymentMessage</h2>
    <script>
        onPaymentOperationFailure();
    </script>
</div>
}


