@model InternshipProject.ViewModels.Payments.PaymentsViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-end">

    <div class="customer-details-label">
        Name:
    </div>
    <div class="customer-details-value">
        @Model.CustomerName
    </div>
</div>

<div class="d-flex justify-content-end">
    <div class="customer-details-label">
        Contact:
    </div>
    <div class="customer-details-value">
        @Model.CustomerPhoneNo
    </div>
</div>

<br />
<div class="table-responsive">
    <table class="table table-striped" style="width: 500px;">
        <thead>
            <tr>
                <th style="color: white; background-color: #60A917;">
                    Select accounts
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.BanksAccounts)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                                @account.IBAN
                            </label>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="d-flex flex-row-reverse bd-highlight">
    <div class="p-2 bd-highlight">
        @using (Html.BeginForm("New", "Payments"))
        {
        <button class="btn btn-success" type="submit">
            New Payment
        </button>
        }
    </div>
</div>


<br />
<form class="searchButtonPayments " action="/Payments/SearchPayments/{searchString}" style="margin: auto; width: 300px; margin-right: 0px;">
    <input type="text" placeholder="Search.." name="searchString">
    <button type="submit">
        <i class="fa fa-search"></i>
    </button>
</form>


<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr style="color: white; background-color: #60A917;">
                <th style="width: 150px;"> Amount </th>
                <th style="width: 230px;"> Date </th>
                <th> Internal Account </th>
                <th> External Account </th>
                <th style="width: 120px;"> Details </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.BanksAccounts)
            {
                @foreach (var transaction in account.Transactions)
                {
                    <tr>
                        <td> @transaction.Amount.ToString("N") </td>
                        <td> @transaction.Time.ToString("dd/MM/yyyy") </td>
                        <td> @account.IBAN </td>
                        <td> @transaction.ExternalIBAN </td>
                        <td> @Html.ActionLink("Details", "Details", "Payments", new { Id = transaction.Id }, null) </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="d-flex flex-row-reverse bd-highlight">
    <div class="p-2 bd-highlight">
        <button class="btn btn-success" href="">
            Export
        </button>
    </div>
</div>
